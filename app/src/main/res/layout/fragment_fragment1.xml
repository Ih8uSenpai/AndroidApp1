<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gacha_screen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/memories_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@drawable/background1_pulls_window"
        >
        <ImageButton
            android:id="@+id/memoriesToHome"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/close_button"
            android:background="#00000000"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/black"
            android:elevation="1dp" />

        <ImageView
            android:id="@+id/banner_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintLeft_toLeftOf="@id/vguideline_for_banner"
            app:layout_constraintTop_toTopOf="@id/hguideline_for_banner"
            app:layout_constraintWidth_percent="0.65"
            app:srcCompat="@drawable/event_character_banner" />

        <TextView
            android:id="@+id/banner_line"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#77000000"
            app:layout_constraintWidth_percent="0.85"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@id/hguideline_for_banner"
            app:layout_constraintRight_toRightOf="@id/banner_background"
            android:elevation="10dp"
            />

        <TextView
            android:id="@+id/gold_gacha"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@drawable/parallelogram_shape1"
            app:layout_constraintRight_toLeftOf="@id/vguideline_for_gold_gacha"
            app:layout_constraintBottom_toTopOf="@id/hguideline_for_gems" />
        <TextView
            android:id="@+id/gems1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@drawable/parallelogram_shape1"
            app:layout_constraintBottom_toTopOf="@id/hguideline_for_gems"
            app:layout_constraintLeft_toLeftOf="@id/vguideline_for_gems"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hguideline_for_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vguideline_for_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.24" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hguideline_for_pulls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vguideline_for_pulls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vguideline_for_gold_gacha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hguideline_for_gems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.07" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vguideline_for_gems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vguideline_for_pull_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vguideline_for_banner_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/gold_icon"
            app:layout_constraintLeft_toLeftOf="@+id/gold_gacha"
            app:layout_constraintBottom_toTopOf="@id/hguideline_for_gems" />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/gems_icon"
            app:layout_constraintLeft_toLeftOf="@+id/gems1"
            app:layout_constraintTop_toTopOf="@id/gems1"
            app:layout_constraintBottom_toBottomOf="@id/gems1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pull"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="x1"
            android:background="#e9ff24"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="@id/banner_background"
            app:layout_constraintLeft_toLeftOf="@id/vguideline_for_pull_button"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintWidth_percent="0.15"
            android:textAllCaps="false"
            android:elevation="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pull_10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="x10"
            android:background="#e9ff24"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="@id/banner_background"
            app:layout_constraintRight_toRightOf="@id/banner_background"
            app:layout_constraintLeft_toRightOf="@id/pull"
            android:textAllCaps="false"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintWidth_percent="0.15"
            android:elevation="10dp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/event_banner_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#6770F1"
            android:elevation="10dp"
            android:fontFamily="@font/star_renegades2"
            android:text="event"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintHeight_percent="0.11"
            app:layout_constraintLeft_toLeftOf="@id/banner_line"
            app:layout_constraintTop_toTopOf="@id/banner_background"
            app:layout_constraintWidth_percent="0.14" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/standart_banner_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:background="#6770F1"
            android:elevation="10dp"
            android:fontFamily="@font/star_renegades2"
            android:text="standart"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintHeight_percent="0.11"
            app:layout_constraintLeft_toLeftOf="@id/banner_line"
            app:layout_constraintTop_toBottomOf="@id/event_banner_button"
            app:layout_constraintWidth_percent="0.14" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#77FFFFFF"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="29 days left"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@id/banner_background"
            app:layout_constraintRight_toRightOf="@id/banner_background"
            app:layout_constraintWidth_percent="0.15"
            android:padding="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pull_animation_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone">
        <VideoView
            android:id="@+id/pull_animation1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
        <VideoView
            android:id="@+id/loot_animation1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
        <SurfaceView
            android:id="@+id/pull_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>