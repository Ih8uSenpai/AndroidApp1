<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/blue"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profile_to_home"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="BACK"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inventory_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/blue"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/inventory_to_home"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="BACK"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rating_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/blue"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rating_to_home"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="BACK"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pull_animation_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <VideoView
            android:id="@+id/pull_animation1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
        <VideoView
            android:id="@+id/loot_animation1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
        <SurfaceView
            android:id="@+id/pull_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/memories_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/memoriesToHome"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:text="back"
            android:background="#e9ff24"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/banner2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/gems1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="#66000000"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/pulls"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="#66000000"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintRight_toLeftOf="@+id/gems1"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/pull_icon"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="85dp"
            app:layout_constraintRight_toRightOf="@+id/pulls"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/gems_icon"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintRight_toRightOf="@+id/gems1"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pull"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:text="x1"
            android:background="#e9ff24"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="580dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pull_10"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:text="x10"
            android:background="#e9ff24"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="40dp"
            app:layout_constraintLeft_toRightOf="@+id/pull"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_screen"
        android:visibility="visible">

        <VideoView
            android:id="@+id/home_screen_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profile_bar"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:cardForegroundColor="#44000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/My_style1"
            app:cardElevation="0dp"
            android:elevation="0dp"
            android:alpha="0.8">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardForegroundColor="#66000000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardElevation="0dp"
                android:elevation="0dp"
                android:alpha="0.8"/>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv."
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="15dp"
            android:elevation="10dp"
            android:orientation="vertical"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="NICKNAME"
                android:fontFamily="@font/star_renegades1"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <ProgressBar
                android:id="@+id/progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="150dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:max="1000"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar_style" />
        </LinearLayout>

        <TextView
            android:id="@+id/gems"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="#66000000"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/gold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="#66000000"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintRight_toLeftOf="@+id/gems"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gain_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gain exp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gain_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gain gold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gain_exp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gain_gems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gain gems"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gain_gold" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/gold_icon"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="85dp"
            app:layout_constraintRight_toRightOf="@+id/gold"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/gems_icon"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintRight_toRightOf="@+id/gems"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/memories"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="55dp"
            android:layout_marginEnd="80dp"
            android:outlineSpotShadowColor="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            android:background="@drawable/button_selector"
            android:src="@drawable/memories"
            android:contentDescription="gacha_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memories"
            android:fontFamily="@font/cybertooth0007"
            android:textColor="@color/white"
            android:textColorHighlight="@color/black"
            android:shadowColor="@color/blue"
            android:shadowRadius="10"
            android:textSize="23sp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="70dp"
            app:layout_constraintTop_toTopOf="@+id/memories"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:outlineSpotShadowColor="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            android:background="@drawable/button_selector_1"
            android:src="@drawable/setting_button1"
            android:contentDescription="gacha_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageButton
            android:id="@+id/characters_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="150dp"
            android:layout_marginEnd="20dp"
            android:outlineSpotShadowColor="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            android:background="@drawable/button_selector"
            android:src="@drawable/coll"
            android:contentDescription="gacha_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageButton
            android:id="@+id/inventory_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="174dp"
            android:background="@drawable/button_selector"
            android:contentDescription="gacha_button"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:src="@drawable/inv_but"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton
            android:id="@+id/rating_button"
            android:layout_width="86dp"
            android:layout_height="94dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="244dp"
            android:background="@drawable/button_selector"
            android:contentDescription="gacha_button"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:src="@drawable/rating"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Characters"
            android:fontFamily="@font/cybertooth0007"
            android:textColor="@color/white"
            android:textColorHighlight="@color/black"
            android:shadowColor="@color/blue"
            android:shadowRadius="10"
            android:textSize="23sp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="@+id/characters_button"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inventory"
            android:fontFamily="@font/cybertooth0007"
            android:textColor="@color/white"
            android:textColorHighlight="@color/black"
            android:shadowColor="@color/blue"
            android:shadowRadius="10"
            android:textSize="23sp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="130dp"
            app:layout_constraintTop_toTopOf="@+id/inventory_button"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:fontFamily="@font/cybertooth0007"
            android:textColor="@color/white"
            android:textColorHighlight="@color/black"
            android:shadowColor="@color/blue"
            android:shadowRadius="10"
            android:textSize="23sp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="63dp"
            app:layout_constraintTop_toTopOf="@+id/rating_button"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#77333FFF"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="110dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volume"
                    android:textColor="@color/white"
                    android:height="50dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <SeekBar
                    android:id="@+id/volume_seek_bar"
                    android:layout_width="500dp"
                    android:layout_height="wrap_content" />
            </TableRow>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Language"
                        android:textColor="@color/white"
                        android:height="50dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/language_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </TableRow>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/settings_to_home"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="BACK"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>