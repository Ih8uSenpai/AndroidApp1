<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_screen">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:background="@color/cardview_dark_background">

        <!-- The main content view -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <!-- Your existing layout goes here, without the ScrollView -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Banner image with lowered opacity -->
                <ImageView
                    android:id="@+id/banner_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kafka_bg"
                    android:alpha="0.8" />

                <!-- User avatar with a frame -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/avatar_frame"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="140dp"
                    android:layout_marginStart="16dp"
                    android:elevation="8dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="60dp">

                    <ImageView
                        android:id="@+id/avatar_frame_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/blade_bg1"
                        android:scaleType="fitXY"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/avatar_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon1x"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/CircleShape"/>

                </com.google.android.material.card.MaterialCardView>

                <!-- Layout for user's info -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="200dp"
                    android:layout_marginStart="140dp"

                    android:padding="10dp">

                    <!-- User name with futuristic font and text style -->
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="username"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/star_renegades2"
                        android:shadowColor="@color/blue"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <!-- User level with futuristic font and text style -->
                    <TextView
                        android:id="@+id/user_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lv. XX"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/star_renegades2"
                        android:shadowColor="@color/blue"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        app:layout_constraintTop_toBottomOf="@id/user_name"
                        app:layout_constraintLeft_toLeftOf="parent"/>


                    <!-- Button to edit profile with stylish design -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="change name"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:background="@color/light_yellow"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/star_renegades1"
                        android:shadowColor="@color/blue"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Additional user details -->
                <LinearLayout
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/user_info"
                    android:padding="10dp">

                    <!-- Add details here -->

                </LinearLayout>


                <EditText
                    android:id="@+id/user_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:minHeight="80dp"
                    android:layout_below="@id/user_info"
                    android:hint="Type something"
                    android:inputType="textMultiLine"
                    android:textColorHint="#AAFFFFFF"
                    android:padding="5dp"
                    android:focusable="false"
                    android:textColor="@color/white"
                    android:background="#33FFFFFF"
                    android:maxLength="300"/>

            </RelativeLayout>


        </RelativeLayout>

        <!-- Navigation panel on the right -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#424242">

            <ImageButton
                android:id="@+id/profile_to_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:contentDescription="close"
                android:elevation="15dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/close_button"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_to_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textColor="@color/white"
                android:background="#22000000"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_to_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rank"
                android:textColor="@color/white"
                android:background="#22000000"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/btn_to_details"
                android:layout_marginTop="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>